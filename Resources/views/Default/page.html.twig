{% extends "MaxSymForum::simpleLayout.html.twig" %}

{% block title title %}

{% block content %}
  <p>
    <a class="symfony-button-green" href="{{ path('_symforum_page', {'name':name,'title':title,'page': previous_page}) }}">Previous</a>
    <a class="symfony-button-green" href="{{ path('_symforum_page', {'name':name,'title':title,'page': next_page}) }}">Next</a>
  </p>
  {% for item in text %}
    <p>{{ item.text }}</p>
  {% endfor %}
  <p>
    <a class="symfony-button-green" href="{{ path('_symforum_page', {'name':name,'title':title,'page': previous_page}) }}">Previous</a>
    <a class="symfony-button-green" href="{{ path('_symforum_page', {'name':name,'title':title,'page': next_page}) }}">Next</a>
  </p>
  <form action="#" method="post">

    {{ form_field(form) }}
    <p><input class="symfony-button-grey" type="submit" /></p>

  </form>
{% endblock %}

