{% extends "MaxSymForum::simpleLayout.html.twig" %}

{% block title "SymForum - Subjects" %}

{% block content %}
  <p>
    <a class="symfony-button-green" href="{{ path('_symforum_list_page', {'page': previous_page}) }}">Previous</a>
    <a class="symfony-button-green" href="{{ path('_symforum_list_page', {'page': next_page}) }}">Next</a>
  </p>
  {% for item in subjects %}
    {% if item.type is defined %}
      <p><a href="{{ path('_symforum_list',{'id':item.id}) }}">{{item.title}}</a></p>
    {% else %}
      <p><a href="{{ path('_symforum_page',{'page':1,'name':name,'title':item.title}) }}">{{item.title}}</a></p>
    {% endif %}
  {% endfor %}
  <p>
    <a class="symfony-button-green" href="{{ path('_symforum_list_page', {'page': previous_page}) }}">Previous</a>
    <a class="symfony-button-green" href="{{ path('_symforum_list_page', {'page': next_page}) }}">Next</a>
  </p>
{% endblock %}