{% extends "MaxSymForum::simpleLayout.html.twig" %}

{% block title "Hello !" %}

{% block content %}
  <p>
    <a class="symfony-button-green" href="{{ path('_symforum', {'page': previous_page}) }}">Previous</a>
    <a class="symfony-button-green" href="{{ path('_symforum', {'page': next_page}) }}">Next</a>
  </p>
  {% for article in articles %}
    <p>{{ article.id }} : {{ article.text|raw }}</p>
  {% endfor %}
  <p>
    <a class="symfony-button-green" href="{{ path('_symforum', {'page': previous_page}) }}">Previous</a>
    <a class="symfony-button-green" href="{{ path('_symforum', {'page': next_page}) }}">Next</a>
  </p>
{% endblock %}