<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <link rel="stylesheet" href="{{ asset('bundles/maxsymforum/css/demo.css') }}" type="text/css" media="all" />
        <title>{% block title %}SymForum{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="symfony-wrapper">
            <div id="symfony-header">
                <a href="{{ path('_symforum_list') }}">
                    <img src="{{ asset('bundles/maxsymforum/images/logo.gif') }}" alt="Symfony">
                </a>
                <form id="symfony-search" method="GET" action="http://symfony.com/search">
                    <label for="symfony-search-field"><span>Search</span></label>
                    <input name="q" id="symfony-search-field" type="search" placeholder="Search" class="medium_txt">
                    <input type="submit" class="symfony-button-grey" value="OK" />
                </form>
            </div>

            {% if app.session.flash('notice') %}
                <div class="flash-message">
                    <em>Notice</em>: {{ app.session.flash('notice') }}
                </div>
            {% endif %}

            <div class="symfony-content">
                <p><a class="symfony-button-grey" href="{{ path('_symforum_list') }}">Home</a></p>
                {% block content %}
                {% endblock %}
                <p><a class="symfony-button-grey" href="{{ path('_admin',{'name':name}) }}">Admin</a></p>
            </div>

        </div>
    </body>
</html>
